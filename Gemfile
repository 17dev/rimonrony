source "https://rubygems.org"

ruby ">= 3.1.0"

# Core Jekyll engine
gem "jekyll", "~> 4.3"

# Plugins for feeds and SEO (optional but recommended)
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.17"
  gem "jekyll-seo-tag", "~> 2.8"
end

# Needed to run locally on Ruby 3+
gem "webrick", "~> 1.8"

# Ensure Cloudflare Pages uses the correct Bundler
gem "bundler", "~> 2.6"
